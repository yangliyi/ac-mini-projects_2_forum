<%= form_for [@post, @post.comments.build] do |f| %>

  <div class="form-group">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-default"%>

<% end %>