  <table class="table">
    <tr><td><h2>標題<%= @post.topic%></h2></td></tr>
    <tr><td><h4>分類：
    <% @post.categories.each do |c|%>
    <span class=" label label-info"><%= c.name %></span>
    <% end %>
    </h4></td></tr>
    <tr><td><p>內文：<%= @post.content%></p></td></tr>

  </table>


  <%= link_to '編輯', edit_post_path(@post), class: "btn btn-warning" %>


  <h3>我要回覆</h3>

  <%= render 'comments/form'%>

  <h3>留言</h3>

  <%= render 'comments/comment' %>


  <br>
  <%= link_to '返回首頁', posts_path %>